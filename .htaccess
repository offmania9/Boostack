<ifmodule mod_headers.c="">
    Header set X-UA-Compatible "IE=Edge,chrome=1"
        # mod_headers can't match by content-type, but we don't want to this header on everything
        <filesmatch>
            Header unset X-UA-Compatible
        </filesmatch>
</ifmodule>

